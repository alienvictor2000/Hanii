                    <li>
                        <div class="dropdown">
                            <button style="margin-top: 10px; font-size: 20px;" class="dropbtn">
                                <i class="fa fa-search"></i>
                            </button>
                            <div class="dropdown-content">
                                <form method="post" asp-controller="Home" asp-action="SearchProduct">
